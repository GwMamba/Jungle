<div class="container mt-4">
  <h1>Admin Dashboard</h1>

  <div class="row mt-4">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Products</h5>
          <p class="card-text"><%= @product_count %> products in the database.</p>
          <%= link_to "View Products", admin_products_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Categories</h5>
          <p class="card-text"><%= @category_count %> categories in the database.</p>
          <%= link_to "View Categories", admin_categories_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>